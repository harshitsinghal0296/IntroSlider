<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.androidhive.introslider.contact"
    android:orientation="vertical"
    android:background="@drawable/contact">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let Get In Touch"
        android:textSize="30dp"
        android:gravity="center_vertical"
        android:textColor="#00BB00"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="70dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="40dp"
            android:text="Name :"
            android:textSize="20dp"
            android:textColor="#880000"
            android:src="@drawable/indianflag" />

        <EditText
            android:id="@+id/name"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="Your Name *"
            android:layout_marginLeft="7dp"
            android:backgroundTint="#00BB00"
            android:textSize="18dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="40dp"
            android:text="+91 :"
            android:textSize="25dp"
            android:textColor="#880000"
            android:src="@drawable/indianflag" />

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="Contact No *"
            android:inputType="phone"
            android:layout_marginLeft="15dp"
            android:backgroundTint="#00BB00"
            android:textSize="18dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_marginLeft="40dp"
            android:text="Message :"
            android:textSize="15dp"
            android:textColor="#880000"
            android:src="@drawable/indianflag" />

        <EditText
            android:id="@+id/field_phone_number"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="Your Message *"
            android:layout_marginLeft="7dp"
            android:inputType="textMultiLine"
            android:lines="6"
            android:minLines="2"
            android:maxLines="3"
            android:backgroundTint="#00BB00"
            android:textSize="18dp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_start_verification"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Send"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/facebooklogo" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="OR"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"

            android:background="@drawable/gmaillogo"
            android:textSize="18dp" />

    </LinearLayout>


</LinearLayout>
